﻿﻿﻿@using PagedList.Mvc;
@using PagedList;
@model IPagedList<DoAnNguyenVanTruong.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<div class="main-content-inner">
    <!-- main-content-wrap -->
    <div class="main-content-wrap">
        <div class="flex items-center flex-wrap justify-between gap20 mb-27">
            <h3>Danh sách sản phẩm</h3>
            <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                <li>
                    <a href="/Admin/Dashboard"><div class="text-tiny">Trang chủ</div></a>
                </li>
                <li>
                    <i class="icon-chevron-right"></i>
                </li>
                <li>
                    <a href="/Products/Index"><div class="text-tiny">Sản phẩm</div></a>
                </li>
                <li>
                    <i class="icon-chevron-right"></i>
                </li>
                <li>
                    <div class="text-tiny">Danh sách sản phẩm</div>
                </li>
            </ul>
        </div>
        <!-- product-list -->
        <div class="wg-box">
            <div class="title-box">

            </div>
            <div class="flex items-center justify-between gap10 flex-wrap">
                <div class="wg-filter flex-grow">
                    <a class="tf-button style-1 w208" href="/Products/Create"><i class="icon-plus"></i>Thêm mới</a>

                </div>

            </div>
            <div class="wg-table table-product-list">
                <ul class="table-title flex gap20 mb-14">
                    <li>
                        <div class="body-title">Sản phẩm</div>
                    </li>
                    <li>
                        <div class="body-title">Mã sản phẩm</div>
                    </li>
                    <li>
                        <div class="body-title">Giá</div>
                    </li>

                    <li>
                        <div class="body-title">Giảm giá</div>
                    </li>
                    <li>
                        <div class="body-title"></div>
                    </li>

                </ul>
                <ul class="flex flex-column">
                    @foreach (var item in Model)
                    {
                        <li class="product-item gap14">
                            <div class="image no-bg">
                                <img src="~/assets/images/product/@item.Images" alt="">
                            </div>
                            <div class="flex items-center justify-between gap20 flex-grow">
                                <div class="name">
                                    <a href="@Url.Action("Details", "Products", new {id=item.ProductID})" class="body-title-2">@item.ProductName</a>
                                </div>
                                <div class="body-text">@item.ProductID</div>
                                <div class="body-text">@String.Format("{0:0,0}", item.Price)</div>

                                <div class="body-text">@item.SaleOff</div>
                                <div class="list-icon-function">
                                    <div class="item eye">
                                        <a href="@Url.Action("Details","Products", new {id=item.ProductID})"><i class="icon-eye"></i></a>
                                    </div>
                                    <div class="item edit">
                                        <a href="@Url.Action("Edit","Products", new {id=item.ProductID})"><i class="icon-edit-3"></i></a>
                                    </div>
                                    <div class="item trash">
                                        <a href="@Url.Action("Delete","Products", new {id=item.ProductID})"><i class="icon-trash-2"></i></a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }


                </ul>
            </div>
            <div class="divider"></div>
            <div class="flex items-center justify-between flex-wrap gap10">
                <div class="text-tiny"></div>
                <ul class="wg-pagination">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, PageSize = 8 }))
                </ul>
            </div>
        </div>
        <!-- /product-list -->
    </div>
    <!-- /main-content-wrap -->
</div>
<div class="bottom-page">
    <div class="body-text">Copyright © 2024 Mobile</div>
    <i class="icon-heart"></i>
</div>