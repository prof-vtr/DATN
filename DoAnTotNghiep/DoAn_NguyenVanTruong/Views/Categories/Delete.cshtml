@model DoAnNguyenVanTruong.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<div class="main-content-inner">
    <!-- main-content-wrap -->
    <div class="main-content-wrap">
        <div class="flex items-center flex-wrap justify-between gap20 mb-27">
            <h3>Xoá thương hiệu</h3>
            <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                <li>
                    <a href="@Url.Action("Dashboard","Admin")"><div class="text-tiny">Trang chủ</div></a>
                </li>
                <li>
                    <i class="icon-chevron-right"></i>
                </li>
                <li>
                    <a href="@Url.Action("Index","Categories")"><div class="text-tiny">thương hiệu</div></a>
                </li>
                <li>
                    <i class="icon-chevron-right"></i>
                </li>
                <li>
                    <div class="text-tiny">Xoá thương hiệu thương hiệu</div>
                </li>
            </ul>
        </div>
        <!-- new-category -->
        <div class="wg-box">
            <form action="/Categories/Delete/@Model.CategoryID" method="post" enctype="multipart/form-data" class="form-new-product form-style-1">
                @Html.AntiForgeryToken()
                <fieldset class="name">
                    <div class="body-title">Tên thương hiệu <span class="tf-color-1">*</span></div>
                    <input class="flex-grow" type="text" placeholder="Category name" name="CategoryName" tabindex="0" value="@Model.CategoryName" aria-required="true" required="" readonly>
                </fieldset>
                <fieldset>
                    <div class="body-title"> Ảnh <span class="tf-color-1">*</span></div>
                    <div class="upload-image flex-grow">
                        <div class="item up-load">
                            <div class="item">
                                <img id="output" src="~/assets/images/category/@Model.Images" alt="" style="border-radius: 12px; border: 1px solid #ECF0F4" />
                            </div>

                        </div>
                    </div>
                </fieldset>
                <div class="bot">
                    <div></div>
                    <button class="tf-button w208" type="submit">Xoá thương hiệu</button>
                </div>
            </form>
        </div>
        <!-- /new-category -->
    </div>
    <!-- /main-content-wrap -->
</div>
<div class="bottom-page">
    <div class="body-text">Copyright © 2024 Mobile</div>
    <i class="icon-heart"></i>
</div>