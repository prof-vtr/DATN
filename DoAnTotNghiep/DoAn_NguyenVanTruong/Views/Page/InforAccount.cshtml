<div class="col-xl-6 col-lg-6 col-md-8">
    <div class="box_account">
        <h3 class="new_client" >Thông tin tài khoản</h3> <small class="float-right pt-2">* Thông tin chi tiết</small>
                                                        <div class="form_container">
                                                            <div class="form-group">
                                                                <label>Email</label><br />
                                                                <input type="email" class="form-control" name="email" value="@Model.Email" id="email_2" placeholder="Email*" readonly>
                                                            </div>
                                                            <hr>
                                                            @using (Html.BeginForm("InforAccount", "Page", FormMethod.Post))
                                                            {
                                                                <div class="form-group">
                                                                    <label class="container_radio" style="display: inline-block; margin-right: 15px;">
                                                                        Nam
                                                                        <input type="radio" name="gender" value="@Model.Gender">
                                                                        <span class="checkmark"></span>
                                                                    </label>
                                                                    <label class="container_radio" style="display: inline-block;">
                                                                        Nữ
                                                                        <input type="radio" name="gender" value="@Model.Gender">
                                                                        <span class="checkmark"></span>
                                                                    </label>
                                                                </div>
                                                                <div class="private box">
                                                                    <div class="row no-gutters">
                                                                        <div class="col-6 pr-1">
                                                                            <div class="form-group">
                                                                                <input type="text" name="firstname" value="@Model.Username" class="form-control" placeholder="Name*">
                                                                            </div>
                                                                        </div>

                                                                        <div class="col-12">
                                                                            <div class="form-group">
                                                                                <input type="text" class="form-control" value="@Model.Address" name="address" placeholder="Full Address*">
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <!-- /row -->
                                                                    <!-- /row -->

                                                                    <div class="row no-gutters">
                                                                        <div class="col-6 pl-1">
                                                                            <div class="form-group">
                                                                                <input type="text" name="phone" value="@Model.Phone" class="form-control" placeholder="Telephone *">
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <!-- /row -->

                                                                </div>
                                                                <!-- /private -->
                                                                <!-- /company -->
                                                                <hr>

                                                                <div class="text-center"><input type="submit" value="Confirm" class="btn_1 full-width"></div>
                                                            }

                                                        </div>
   

        <!-- /form_container -->
    </div>
    <!-- /box_account -->
</div>

