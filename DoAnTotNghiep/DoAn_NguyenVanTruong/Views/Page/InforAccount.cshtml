    ViewBag.Title = "InforAccount";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
<link href="~/assets/css/account.css" rel="stylesheet">
<link href="~/assets/css/stylepage.css" rel="stylesheet">
<!-- YOUR CUSTOM CSS -->
<link href="~/assets/css/custom.css" rel="stylesheet">
<style>
    .form-control {
        width: 66%;
    }

    .form-group {
        margin-left: 25%;
    }

    .regiter {
        width: 50%;
        margin-left: 25%;
    }

    .btn_1.full-width {
        width: 50%;
        margin-left: 25%;
    }
    .col-6{
        width:100%;
    }
    .box_account{
        width:150%;
        margin-left:25%;
